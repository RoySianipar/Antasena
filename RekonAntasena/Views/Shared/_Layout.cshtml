<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rekonsiliasi Antasena</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-custom{
            background-color: #0862C2 !important;         
        }
        
        .dropdown-submenu {
            position: relative;
        }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Rekonsiliasi Antasena</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Rekon File Tsd <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Rekonsiliasi Tsd", "Index", "Home")</li>
                            <li > @Html.ActionLink("Data Match Tsd", "DataMatch", "Home") </li >
                            <li > @Html.ActionLink("Data Unmatch Tsd Antasena", "UnmatchAntasena", "Home") </li >
                            <li > @Html.ActionLink("Data Unmatch Tsd LHBU", "UnmatchLHBU", "Home") </li >
                        </ul >
                    </li >
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Rekon File Tsu <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Rekonsiliasi Tsu", "Index", "Tsu")</li>
                            <li> @Html.ActionLink("Data Match Tsu", "DataMatchTsu", "Tsu") </li>
                            <li> @Html.ActionLink("Data Unmatch Tsu Antasena", "UnmatchTsuAntasena", "Tsu") </li>
                            <li> @Html.ActionLink("Data Unmatch Tsu LHBU", "UnmatchTsuLHBU", "Tsu") </li>
                        </ul>
                    </li>
                </ul >
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lae Roy</p>
        </footer>
    </div>
    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $('a.test').next('ul').css('display', 'none');
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
